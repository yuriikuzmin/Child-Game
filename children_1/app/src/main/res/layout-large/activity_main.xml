<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/background_ch_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/backgroud_ch_main" />

    <LinearLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_text_main"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="15"
            android:background="@drawable/my_rectangle"
            android:src="@drawable/img_children_main" />

        <ImageView
            android:id="@+id/img_main"
            android:layout_width="460dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="60"
            android:background="@drawable/my_rectangle"
            android:src="@drawable/img_for_main" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="15"
            android:background="@drawable/style_button_main_yellow95_teal200"
            android:text="@string/button_main"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="italic" />
    </LinearLayout>


</RelativeLayout>